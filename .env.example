# Database Configuration (Required)
DATABASE_URL=postgresql://user:password@localhost:5432/twitter_spaces

# x402 Payment Configuration (Required)
# Address that receives x402 payments
PAY_TO_ADDRESS=0x1234567890123456789012345678901234567890
# Facilitator API URL for payment processing
FACILITATOR_URL=https://facilitator.daydreams.systems

# OpenAI Configuration (Required)
# OpenAI API key for Whisper transcription and GPT-4o formatting/chat
OPENAI_API_KEY=sk-...

# Twitter Configuration (Required for downloading spaces)
# Twitter cookies in JSON array format for authenticated space downloads
TWITTER_COOKIES=[]

# Next.js Configuration
# Public app URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Audio Processing Configuration (Optional)
# Duration in minutes for audio chunks when splitting large files (default: 10)
AUDIO_CHUNK_DURATION_MINUTES=10

# Storage Configuration (Optional)
# Path for storing audio and transcript files (default: ./data/spaces)
DATA_STORAGE_PATH=./data/spaces